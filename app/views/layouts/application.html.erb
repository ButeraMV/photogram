<!DOCTYPE html>
<html>
  <head>
    <title>Photogram</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= render 'layouts/navbar' %>
    <% flash.each do |name, msg| %>
      <div class="container">
        <%= content_tag :div, msg, class: [:alert, alert_for(name)] %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
